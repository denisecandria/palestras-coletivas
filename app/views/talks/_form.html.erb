<%= form_for(@talk, :url => url, :html => {:class => 'form-horizontal' }) do |f| %>
  <%= render "shared/error_messages", :record => @talk %>

  <div class="control-group">
    <%= f.label :presentation_url, t("labels.talk.presentation_url"), :class => 'control-label' %>
    <div class="controls">
      <%= f.url_field :presentation_url, :class => "m-wrap m-ctrl-large" %>
      <b><span id="searching_talk" class="text-error" style="display:none"><%= t("new.talk.searching") %></span></b>
      <span class="help-block"><p class="text-info"><%= t("new.talk.help.presentation_url_html") %></p></span>
      <span id="talk_not_found" class="text-error" style="display:none"><%= t("new.talk.not_found") %></span>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :title, t("labels.talk.title"), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :placeholder => t("placeholder.talks.title"), :class => "m-wrap m-ctrl-large" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :description, t("labels.talk.description"), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, :placeholder => t("placeholder.talks.description"), :rows => 5, :class => "m-wrap m-ctrl-large" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :tags, t("labels.talk.tags"), :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :tags, :placeholder => t("placeholder.talks.tags"), :class => "m-wrap m-ctrl-large" %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :video_link, t("labels.talk.video_link"), :class => 'control-label' %>
    <div class="controls">
      <%= f.url_field :video_link, :class => "m-wrap m-ctrl-large" %>
      <span class="help-block"><p class="text-info"><%= t("new.talk.help.video_link_html") %></p></span>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :to_public, t("labels.talk.to_public"), :class => 'control-label' %>
    <div class="controls">
      <%= f.check_box :to_public, :class => "m-wrap" %>
      <span class="help-inline"><%= t("new.talk.help.to_public") %></span>
    </div>
  </div>

  <%= render "shared/invite_user", :model => @talk, :users => @authors, :key => "author" %>

  <div class="m-btn-strip">
    <%= f.submit :class => 'm-btn blue' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
          talks_path, :class => 'm-btn black' %>
  </div>

  <%= f.hidden_field :thumbnail %>
  <%= f.hidden_field :code %>

  <span id="user_in_the_list"><%= t("new.invite.js.the_user_is_already_in_the_list") %></span>
  <span id="user_invalid"><%= t("new.invite.js.user_invalid") %></span>
  <span id="remove"><%= t("new.invite.js.remove") %></span>
<% end %>
