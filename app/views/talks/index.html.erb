<div class="row-fluid">
  <div class="span12">
    <div class="page-header">
      <div class="row-fluid">
        <div class="span4">
          <h1><%= t("titles.talks.index") %> <small>(<%= @talks.count %>)</small></h1>
        </div>
        <% if logged_in? %>
        <div class="span8">
          <ul id="work-filter">
            <li><%= link_to t("titles.talks.new"), new_talk_path, :class => "m-btn blue" %></li>
            <% if @my %>
            <li><%= link_to t("titles.talks.all"), "/talks", :class => "m-btn black" %></li>
            <% else %>
            <li><%= link_to t("titles.talks.my"), "/talks?my=true", :class => "m-btn black" %></li>
            <% end %>
          </ul>
        </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="span8">
    <% unless @talks.blank? %>
        <%= render "shared/talks", :show_user => true %>
    <% else %>
        <p><%= t("titles.talks.no_talks") %></p>
    <% end %>
  </div>
  <div class="span4">
    <% unless @talks.blank? %>
    <div class="m-input-append">
      <%= form_tag talks_path, method: "get", html: { class: 'form-search' } do |f| %>
        <input type="text" class="search-query m-wrap" id="search" name="search" value="<%= @search %>" autocomplete="off" placeholder="<%= t("placeholder.talks.search") %>">
        <button type="submit" class="m-btn green"><%= t("form.submit.search") %></button>
      <% end %>
    </div>
    <% end %>
  </div>
</div>
