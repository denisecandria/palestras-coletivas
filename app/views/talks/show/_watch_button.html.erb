<% if logged_in? %>
  <% unless @authorized %>
    <% if current_user.watched_talk? @talk %>
      <%= link_to t("labels.talk.watched"), talk_watches_path(@talk), method: :post, class: "btn btn-primary" %>
    <% else %>
      <%= link_to t("labels.talk.not_watched"), talk_watches_path(@talk), method: :post, class: "btn btn-success" %>
    <% end %>
  <% end %>
<% end %>
