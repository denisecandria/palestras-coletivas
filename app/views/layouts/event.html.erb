  <body>
    <%= render "events/show/navbar" %>

    <%= yield %>

    <%= render "shared/footer" %>
    <%= javascript_include_tag "application" %>
    <% if @presenter.image_top %>
      <script type="text/javascript">
        $.backstretch([
          "/tops/<%= @presenter.image_top %>.jpg"
          ], {
            fade: 1000,
            duration: 3000
        });
      </script>
    <% end %>
  </body>
